config wifi-device  wifi0
	option type     atheros
	option channel  11

config wifi-iface
        option device   	wifi0
        option ifname   	ap0
        option mode     	ap
        option network  	lan
        option ssid     	kozlicAP

config wifi-iface
        option device   	wifi0
        option ifname   	adhoc0
        option mode     	adhoc
	option network 		mesh0
        option ssid     	kozlicMESH
