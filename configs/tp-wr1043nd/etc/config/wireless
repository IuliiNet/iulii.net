config wifi-device  radio0
	option type     mac80211
	option channel  11
	option macaddr	f8:d1:11:4b:2e:50
	option hwmode	11ng
	option htmode	HT20
	list ht_capab	SHORT-GI-40
	list ht_capab	DSSS_CCK-40

config wifi-iface
	option device   radio0
	option ifname   ap0
	option network  lan
	option mode     ap
	option ssid     kozlic
	option encryption psk
	option key 	K02l1c84
	
config wifi-iface
        option device           radio0
        option ifname           ap1
        option mode             ap
        option network          mesh
        option ssid             kozlicAP
                                                                             
config wifi-iface
        option device           radio0
        option ifname           adhoc0
        option mode             adhoc
        option network          mesh1
        option ssid             kozlicMESH
